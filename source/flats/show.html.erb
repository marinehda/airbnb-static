<% flat = data.flats[owner] %>

<div class= "long-banner", style="background-image: url('<%= image_path flat.picture %>');">
</div>

<div class= "ad-info">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="header-info">
          <div class="text-center owner-info">
            <%= image_tag flat.owner_picture, class: "avatar-large" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="flat-info">
            <h3><%= flat.summary %></h3>
            <p><%= flat.city %></p>
          </div>
        </div>
      </div>
    <div class="col-xs-12 col-sm-offset-1 col-sm-4">
      <div class="white-card">
        <h3>Book this flat</h3>
        <form action="#">
        <div class="row">
          <div class="col-xs-6">
           <input type="text" class="form-control" placeholder="checkin">
          </div>
          <div class="col-xs-6">
           <input type="text" class="form-control" placeholder="checkout">
          </div>
        </div>
        <select class="form-control guest-nb">
          <option value="1">1 guest</option>
          <option value="2">2 guests</option>
          <option value="3">3 guests</option>
        </select>
          <input type="submit" value="Sign In" class="btn btn-primary">
        </form>
        </div>
      </div>
    </div>
  </div>
</div>

